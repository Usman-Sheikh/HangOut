@model HangOut.Models.PlaceViewModel

<div class="row">
    <div class="col-sm-12">
        <h2 class="title-medium br-bottom mb40">Comments</h2>
        <ul class="media-list">
            @foreach (var item in Model.Comments)
            {
                <li class="media">
                    @*<div class="pull-left">
                        <img src="@Url.Content($"~/Content/images/Users/user.jpg")" alt="@item.UserName" class="media-object">
                    </div>*@
                    <div class="media-body">
                        <h4 class="media-heading">
                            <a href="" class="user">@item.UserName</a>
                            <span class="date">@item.Time.ToShortTimeString()</span>
                        </h4>
                        <p>@item.Text</p>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
<div class="row mb70">
    <div class="col-sm-12">
        <h2 class="title-medium br-bottom mb30">Leave a comment</h2>
        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <label>
                        <textarea name="message" id="message" cols="30" rows="10" required="" class="form-control" placeholder=" Message"></textarea>
                    </label>
                        <div class="mt30 clearfix">
                            <button type="submit" class="btn btn-d rounded">Submit</button>
                        </div>
                }
            </div>
        </div>
    </div>
</div>