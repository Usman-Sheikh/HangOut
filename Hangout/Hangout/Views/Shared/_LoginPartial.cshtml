@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{   
    <li>
        <a href="">@User.Identity.GetUserName()</a>
        <ul class="submenu">
            <li>
                @Html.ActionLink("Manage ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:grey;" })
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" style="color: grey;">Log off</a>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                }
            </li>
        </ul>
    </li>
}
else
{
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
